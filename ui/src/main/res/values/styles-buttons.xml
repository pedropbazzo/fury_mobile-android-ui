<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="Regular" parent="MLFont.Regular"/>
    <style name="Regular.Button" parent="android:Widget.Button"/>

    <style name="Button" parent="Regular.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/ui_button_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">13dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/ui_fontsize_medium</item>
    </style>

    <style name="Button.Action" />

    <style name="Button.Action.Primary">
        <item name="android:background">@drawable/ui_primary_action_button</item>
        <item name="android:textColor">@color/ui_primary_action_button_text_color</item>
    </style>

    <style name="Button.Action.Secondary">
        <item name="android:background">@drawable/ui_secondary_action_button</item>
        <item name="android:textColor">@color/ui_secondary_action_button_text_color</item>
    </style>

    <style name="Button.Option">
        <item name="android:background">@drawable/ui_option_button</item>
    </style>

    <style name="Button.Option.Primary">
        <item name="android:textColor">@color/ui_primary_option_button_text_color</item>
    </style>

    <style name="Button.Option.Secondary">
        <item name="android:textColor">@color/ui_secondary_option_button_text_color</item>
    </style>

</resources>