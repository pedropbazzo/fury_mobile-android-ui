    <style name="TextAppearance.MLTheme.ActionBar.Title" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextAppearance.MLTheme.ActionBar.Subtitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

    <style name="Widget.MLTheme.ActionBar.TabView" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_background</item>
        <!--<item name="background">@drawable/actionbar_tab_background</item>-->
    </style>

    <style name="Widget.MLTheme.ActionBar.TabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/gray_dark</item>
    </style>

</resources>
